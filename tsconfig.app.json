{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/components/*.vue",
    "src/*.ts",
    "src/plugins/*.ts",
    "src/App.vue",
    "src/AppEta.vue",
    "src/AppMultiTimer.vue"
  ],
  "exclude": ["src/**/__tests__/*", "**/*.spec.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  }
}
